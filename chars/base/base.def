; Player information
[Info]
name = "base"        ;Name of character
displayname = "Dlinkoto" ;Name of character to display
versiondate = 09,30,2009    ;Version date of character (MM-DD-YYYY or X.XX)
mugenversion = 1.0          ;Version of M.U.G.E.N character works on (X.XX)
author = "Silvercrs"         ;Character author name
pal.defaults = 1,2,3,4      ;Default palettes in order of preference (up to 4)
                            ;Numbering starts from 1
localcoord = 320,240        ;Local coordinate space width and height

; Files for the player
[Files]
cmd     = base.cmd           ;Command set
cns     = base.cns           ;Constants
st      = base.cns           ;States
stcommon = base_common.cns      ;Common states (from data/ or motif)
sprite  = base.sff           ;Sprite
anim    = base.air           ;Animation
sound   = base.snd           ;Sound
ai      = base.ai            ;AI hints data (not used)

; Maps character selection buttons to palette numbers.
[Palette Keymap]
x = 1 ;Press button X to select palette 1, etc.
y = 2
a = 3
b = 4
;c = 6
;x2 = 7 ;Hold Start and press button X for palette 7, etc.
;y2 = 8
;z2 = 9
;a2 = 10
;b2 = 11
;c2 = 12

